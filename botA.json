{
  "env_file": "acc1.env", # 环境文件
  "exchange": "lighter", # 交易所

  "trading": {
    "ticker": "ETH",              # 交易品种
    "direction": "buy",           # 初始方向（ENABLE_ZIGZAG=false 时使用）
    "quantity": 0.01,             # 每次下单数量
    "min_order_size": 0.005,      # 最小下单量（按交易所/交易对填写）
    "take_profit": 0.01,          # 止盈百分比，0.01 表示 0.01%
    "wait_time": 450,             # 下单间隔（秒）
    "grid_step": -100,            # 网格步长百分比，负值表示不限制
    "stop_price": -1,             # 停止交易价格（-1 关闭）
    "pause_price": -1,            # 暂停价格（-1 关闭）
    "boost": false                # 是否开启 boost 模式
  },

  "zigzag": {
    "enable_zigzag": true,        # 是否启用 ZigZag 判向
    "enable_auto_reverse": true,  # 是否根据 ZigZag 自动反手
    "auto_reverse_fast": true,    # true=破位立即反手；false=等待下一个确认点再决定
    "enable_dynamic_sl": true,    # 动态 SL：确认高/低 ±10 ticks 下原生 SL，持仓为 0 时取消
    "zigzag_depth": 15,           # ZigZag depth
    "zigzag_deviation": 5,        # ZigZag deviation（%）
    "zigzag_backstep": 2,         # ZigZag backstep
    "zigzag_timeframe": "1m",     # ZigZag 聚合周期
    "zigzag_warmup_candles": 200, # ZigZag 预热根数
    "break_buffer_ticks": 10      # 突破确认高/低的 buffer（ticks）
  },

  "risk": {
    "enable_advanced_risk": true,           # 是否启用进阶风险（冗余/最大止损）
    "enable_basic_risk": true,              # 是否启用基础风险（最大持仓、基础释放），进阶风险基础风险只用开一个，也可两个都false
    "risk_pct": 0.5,                        # 进阶风险：风险敞口百分比
    "release_timeout_minutes": 10,          # 进阶风险：未开新仓/停新仓时释放仓位超时（分钟）
    "stop_new_orders_equity_threshold": 50, # 低于该 equity 停新仓并关停
    "max_position_count": 40,               # 基础风险：最大持仓笔数（quantity * max_position_count）
    "basic_release_timeout_minutes": 10     # 基础风险：未开新仓超时时间（分钟）
  },

  "notifications": {
    "enable_notifications": true, # 是否开启通知
    "daily_pnl_report": true      # 是否发送每日 PnL（UTC 12:00，对应 UTC+8 20:00）
  },

  "env": {
    "LOG_FILE_PREFIX": "botA_",           # 日志前缀
    "LOG_RETENTION_DAYS": "1",            # 日志保留天数
    "LIGHTER_REST_MIN_INTERVAL": "0.3",   # REST 最小间隔
    "LIGHTER_BACKOFF_START": "0.5",       # 退避起始
    "LIGHTER_BACKOFF_MAX": "8"            # 退避最大
  }
}
